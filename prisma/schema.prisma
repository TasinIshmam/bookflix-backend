// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL_DEV")
}

// 2
generator client {
    provider = "prisma-client-js"
}

// 3

model Book {
    id              Int         @id @default(autoincrement())
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt
    title           String      @unique
    fileUrl         String      @unique
    fileType        String
    coverImageUrl   String
    copyright       Boolean     @default(false)
    language        String      @default("en")
    genres          Genre[]
    authors         Author[]
}

model Genre {
    id    Int    @id @default(autoincrement())
    name  String @unique
    books Book[]
}

model Author {
    id        Int    @id @default(autoincrement())
    name      String @unique //this isn't unique but can we just do this for convenience sake? :3
    birthYear Int?
    deathYear Int?
    books     Book[]
    createdAt DateTime @default(now())
}

model User {
    id          Int    @id @default(autoincrement())
    email       String @unique
    password    String
    firstName   String
    lastName    String
    createdAt   DateTime @default(now())

}
